<Window x:Class="projetoBanco.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projetoBanco"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="528">
    <Grid Margin="0,0,-100,0">
        <Label x:Name="lblValor" Content="Digite o valor da transação" HorizontalAlignment="Left" Margin="128,91,0,0" VerticalAlignment="Top" Width="164"/>
        <TextBox x:Name="txtValor" HorizontalAlignment="Left" Margin="128,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <Label x:Name="lblCodigoTransacao" Content="Digite o código da transação" HorizontalAlignment="Left" Margin="128,176,0,0" VerticalAlignment="Top" Width="164"/>
        <TextBox x:Name="txtCodigoTransacao" HorizontalAlignment="Left" Margin="128,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <Button x:Name="btnProcessar" Content="Processar Transação" HorizontalAlignment="Left" Margin="128,269,0,0" VerticalAlignment="Top" Width="164" Click="btnProcessar_Click"/>

    </Grid>
</Window>
